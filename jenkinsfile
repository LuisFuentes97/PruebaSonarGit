pipeline {

tools {
        // Install the Maven version configured as "M3" and add it to the path.
        maven "Maven"
    }
    agent any
    stages {

        stage('Build') {
            steps {
                sh 'echo build'
		checkout([$class: 'GitSCM', branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[credentialsId: 'GitHub', url: 'https://github.com/LuisFuentes97/PruebaSonarGit']]])
		//sh 'mvn clean install'
                     
            }
        }                        
        stage('Test') {
            steps {
		sh 'echo test'
		withSonarQubeEnv(credentialsId: 'token-sonar', instalationName: 'SonarScanner') {
                sh 'mvn clean install'
		}
            }
        }
        
        stage('Deploy') {
            steps {
                sh 'echo deploy'
            }
        }
    }
}
